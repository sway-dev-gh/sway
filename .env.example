# Example Environment Variables
# Copy to .env.local and fill with your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5001

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_pk_test_your_key_here
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_your_price_id_here

# Backend Stripe Keys (NEVER commit real values)
STRIPE_SECRET_KEY=sk_live_or_sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database Configuration (if needed)
DATABASE_URL=your_database_connection_string
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASS=your_password

# Security
JWT_SECRET=your_jwt_secret_here
ADMIN_PASSWORD=your_admin_password_here

# Other Services
REDIS_URL=redis://localhost:6379
EMAIL_API_KEY=your_email_service_key