# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sway_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sway_dev
DB_USER=username
DB_PASSWORD=password

# Server Configuration
NODE_ENV=development
PORT=5001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# AI/OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Prompting Agent System Configuration
PROMPTING_ENABLED=true
PROMPTING_DEFAULT_MODEL=gpt-4
PROMPTING_MAX_PROMPT_LENGTH=4000
PROMPTING_AUTO_APPROVE_SIMPLE=false
PROMPTING_REQUIRE_AGENT_REVIEW=true
PROMPTING_DEFAULT_TIMEOUT=30000
PROMPTING_MAX_CONCURRENT_REQUESTS=10

# Agent Configuration
AGENT_RESPONSE_TIMEOUT=60000
AGENT_MAX_WORKSPACES=5
AGENT_DEFAULT_EXPERTISE=general,code_review

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@swayfiles.com

# Webhooks and Integrations
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=100mb
ALLOWED_FILE_TYPES=pdf,txt,md,js,ts,py,java,cpp,c,h,css,html,json,xml,yml,yaml

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_API_KEY=your-analytics-api-key

# Development Settings
DEBUG=true
LOG_LEVEL=debug
LOG_FORMAT=combined

# Production Settings (only needed in production)
REDIS_URL=redis://localhost:6379
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key